{
  "name": "game-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts",
    "serve": "node dist/game-backend/src/server.js",
    "test": "jest --forceExit --coverage --verbose",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon dist/server.js",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "eslint \"src/**/*.{js,ts}\" --quiet --fix",
    "prettier": "prettier \"src/**/*.{js,ts}\" --write"
  },
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.6",
    "@types/ws": "^7.2.2",
    "concurrently": "^5.1.0",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "ts-jest": "^25.2.1",
    "typescript": "~3.7.2"
  },
  "dependencies": {
    "hyperid": "^2.0.3",
    "ws": "^7.2.1"
  }
}
